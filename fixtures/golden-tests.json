{
  "$schema": "./golden-tests.schema.json",
  "version": "2.0",
  "mcp_name": "Moroccan Law MCP",
  "description": "Golden contract test fixtures for real-source Moroccan legal ingestion",
  "tests": [
    {
      "id": "ma-001",
      "category": "article_retrieval",
      "description": "Retrieve Law 05-20 Article 1",
      "tool": "get_provision",
      "input": {
        "document_id": "ma-loi-05-20",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "ma-002",
      "category": "article_retrieval",
      "description": "Retrieve Law 43-20 Article 1",
      "tool": "get_provision",
      "input": {
        "document_id": "ma-loi-43-20",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "ma-003",
      "category": "search",
      "description": "Search for cybersécurité",
      "tool": "search_legislation",
      "input": {
        "query": "cybersécurité"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1
      }
    },
    {
      "id": "ma-004",
      "category": "metadata",
      "description": "list_sources includes jurisdiction",
      "tool": "list_sources",
      "input": {},
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["MA"]
      }
    },
    {
      "id": "ma-005",
      "category": "negative_test",
      "description": "Unknown law returns gracefully",
      "tool": "get_provision",
      "input": {
        "document_id": "fictional-law-2099",
        "section": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
